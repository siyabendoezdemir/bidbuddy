<div class="container mx-auto mt-8">
 <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>

  <h2 class="text-2xl font-semibold mb-4">Pending Auctions</h2>
  <div class="mb-8">
    <% if @pending_auctions.any? %>
      <table class="min-w-full bg-white">
        <thead>
          <tr>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Item
            </th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Start Price
            </th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Start Time
            </th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              End Time
            </th>
            <th class="px-6 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Action
            </th>
          </tr>
        </thead>
        <tbody>
          <% @pending_auctions.each do |auction| %>
            <tr>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                <%= auction.item.name %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                <%= number_to_currency(auction.currentPrice) %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                <%= auction.startTime.strftime("%B %d, %Y at %I:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                <%= auction.endTime.strftime("%B %d, %Y at %I:%M %p") %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-500">
                <%= link_to "Review", review_auction_admin_path(auction), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No pending auctions.</p>
    <% end %>
  </div>

  <h2 class="text-2xl font-semibold mb-4">Active Auctions</h2>
  <div class="mb-8">
    <% if @active_auctions.any? %>
      <table class="min-w-full bg-white">
        <!-- Similar structure to Pending Auctions table, without the Action column -->
      </table>
    <% else %>
      <p>No active auctions.</p>
    <% end %>
  </div>

  <h2 class="text-2xl font-semibold mb-4">Ended Auctions</h2>
  <div class="mb-8">
    <% if @ended_auctions.any? %>
      <table class="min-w-full bg-white">
        <!-- Similar structure to Pending Auctions table, without the Action column -->
      </table>
    <% else %>
      <p>No ended auctions.</p>
    <% end %>
  </div>
</div>