<div class="container mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-6">Start New Auction for <%= @item.name %></h1>

  <%= form_with(model: @auction, local: true, class: "max-w-md mx-auto") do |form| %>
    <% if @auction.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Error:</strong>
        <ul>
          <% @auction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :item_id, value: @item.id %>

    <div class="mb-4">
      <%= form.label :startTime, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :startTime, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :endTime, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.datetime_local_field :endTime, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <p class="text-gray-700 text-sm font-bold">Starting Price: <%= number_to_currency(@item.startingPrice) %></p>
      <p class="text-gray-600 text-xs">The auction will start at this price.</p>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Start Auction", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Cancel", items_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>